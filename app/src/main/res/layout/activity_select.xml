<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activity.SelectActivity">
    <!--显示第一行1至3数字-->
    <TableRow android:layout_weight="1">
        <!--显示数字1图片-->
        <ImageView
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on1_24_1" />
        <!--显示数字2图片-->
        <ImageView
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on2_24" />
        <!--显示数字3图片-->
        <ImageView
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on3_24" />
    </TableRow>
    <!--显示第二行4至6数字-->
    <TableRow android:layout_weight="1">
        <!--显示数字4图片-->
        <ImageView
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on4_24" />
        <!--显示数字5图片-->
        <ImageView
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on5_24" />
        <!--显示数字6图片-->
        <ImageView
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on6_24" />
    </TableRow>
    <!--显示第三行7至9数字-->
    <TableRow android:layout_weight="1">
        <!--显示数字7图片-->
        <ImageView
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on7_24" />
        <!--显示数字8图片-->
        <ImageView
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on8_24" />
        <!--显示数字9图片-->
        <ImageView
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on9_24" />
    </TableRow>
    <!--显示第四行0数字-->
    <TableRow android:layout_weight="1">
        <!--显示数字0图片-->
        <ImageView
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/on0_24" />
        <!--占位-->
        <ImageView
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1" />
        <!--占位-->
        <ImageView
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1" />
    </TableRow>
</TableLayout>